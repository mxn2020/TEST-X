# Database
DATABASE_URL="mongodb://localhost:27017/vite-react-mongo"
# For MongoDB Atlas, use format: mongodb+srv://username:password@cluster.mongodb.net/dbname?retryWrites=true&w=majority

# Application
VITE_APP_NAME="Vite React MongoDB App"
VITE_APP_VERSION="1.0.0"
VITE_APP_DESCRIPTION="Modern React app with Vite, MongoDB, and Prisma"

# API Configuration
VITE_API_URL="http://localhost:3000/api"
VITE_API_BASE_URL="http://localhost:3000"

# Netlify Functions (if using Netlify)
NETLIFY_FUNCTIONS_URL="/.netlify/functions"

# Development
NODE_ENV="development"
PORT=5173

# Optional: JWT Secret for authentication
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# Optional: CORS settings
CORS_ORIGIN="http://localhost:5173"

# Optional: Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100